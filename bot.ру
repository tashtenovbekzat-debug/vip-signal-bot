# ====== –Ø –û–ü–õ–ê–¢–ò–õ ======
@bot.message_handler(func=lambda m: m.text == "‚úÖ –Ø –æ–ø–ª–∞—Ç–∏–ª")
def paid(message):
    user_id = message.from_user.id
    username = message.from_user.username or "-"

    text = (
        "üí∏ <b>–ù–æ–≤–∞—è –∑–∞—è–≤–∫–∞ (–æ–ø–ª–∞—Ç–∞)</b>\n\n"
        f"ID: <code>{user_id}</code>\n"
        f"Username: @{username}\n\n"
        f"–ü–æ–¥—Ç–≤–µ—Ä–¥–∏—Ç—å:\n<code>/ok {user_id}</code>"
    )

    bot.send_message(ADMIN_ID, text)

    try:
        bot.send_message(VIP_CHANNEL, f"–ó–∞—è–≤–∫–∞ –Ω–∞ –¥–æ—Å—Ç—É–ø –æ—Ç {user_id}")
    except:
        pass

    bot.send_message(message.chat.id, "‚è≥ –û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ –∞–¥–º–∏–Ω—É. –û–∂–∏–¥–∞–π –¥–æ—Å—Ç—É–ø.")

# ====== –ü–û–î–¢–í–ï–†–ñ–î–ï–ù–ò–ï –û–ü–õ–ê–¢–´ ======
@bot.message_handler(commands=["ok"])
def approve(message):
    if message.from_user.id != ADMIN_ID:
        bot.send_message(message.chat.id, "–¢—ã –Ω–µ –∞–¥–º–∏–Ω ‚ùå")
        return

    parts = message.text.split()
    if len(parts) != 2:
        bot.send_message(message.chat.id, "–ü–∏—à–∏: /ok ID")
        return

    user_id = int(parts[1])

    link = bot.create_chat_invite_link(
        chat_id=VIP_CHANNEL,
        member_limit=1
    )

    bot.send_message(
        user_id,
        f"‚úÖ –û–ø–ª–∞—Ç–∞ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∞\n–í–æ—Ç VIP —Å—Å—ã–ª–∫–∞:\n{link.invite_link}"
    )

    bot.send_message(message.chat.id, "–ì–æ—Ç–æ–≤–æ ‚úÖ")

# ====== L1 TEST ======
def send_to_admin(text_vip):
    sig_id = str(len(pending_signals)+1)
    pending_signals[sig_id] = text_vip

    kb = InlineKeyboardMarkup()
    kb.row(
        InlineKeyboardButton("‚úÖ OK –≤ VIP", callback_data=f"appr:{sig_id}"),
        InlineKeyboardButton("‚ùå Reject", callback_data=f"rej:{sig_id}")
    )

    bot.send_message(ADMIN_ID, text_vip, reply_markup=kb)

@bot.message_handler(func=lambda m: m.text == "üß™ L1 Test Signal")
def l1(message):
    if message.from_user.id != ADMIN_ID:
        return

    text_vip = (
        "üëë <b>ALPHA GOLD VIP SIGNAL</b>\n\n"
        "üìä GOLD XAUUSD\n"
        "Signal: BUY üü¢\n"
        "TF: M5\n"
        "Entry: TEST\n"
        "TP1: TEST\n"
        "TP2: TEST\n"
        "SL: TEST\n\n"
        "Mode: L1 TEST\n"
        "Confidence: TEST\n"
    )

    send_to_admin(text_vip)

@bot.callback_query_handler(func=lambda c: True)
def callback(call):
    if call.from_user.id != ADMIN_ID:
        return

    data = call.data

    if data.startswith("appr:"):
        sig_id = data.split(":")[1]
        text = pending_signals.get(sig_id)

        if text:
            bot.send_message(VIP_CHANNEL, text)
            bot.answer_callback_query(call.id, "–û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ –≤ VIP üöÄ")

    if data.startswith("rej:"):
        bot.answer_callback_query(call.id, "–û—Ç–∫–ª–æ–Ω–µ–Ω–æ")

# ====== START BOT ======
print("üöÄ BOT STARTED")
bot.infinity_polling(skip_pending=True)